<h2>Add place</h2>

<form action="/places" method="post">

  <label for="name-input">Name:</label>
  <input type="text" name="name" id="name-input" />

  <label for="type-input">Type:</label>
  <select name="type" id="type-input" >
      <option value="">--- choose type ---</option>
      <option value="Coffee shop">Coffee shop</option>
      <option value="Bookstore">Bookstore</option>

  </select>

  <button type="submit">Create</button>

</form>

<br><br>
<h2>List of places</h2>
<hr>
<hr>
{{#each placeDocs }}
    <br>
    <p> <span>Name: </span> {{name}}</p>
    <p> <span>Type of place: </span> {{type}}</p>
    <p><span>Created at: </span> {{createdAt}}</p>
    <p><span>Last updated at: </span> {{updatedAt}}</p>

    <form action="/places/{{_id}}/edit" method="GET">
        <button>Edit place</button>
    </form>
    <br>
    <form action="/places/{{id}}/delete" method="post">
        <button type="submit">Delete place</button>
    </form>
    <br>
    <hr>
{{/each}}
